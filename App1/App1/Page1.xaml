<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page1">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="D and S Parking System"></Label>
            <Label Text="Email"></Label>
            <Entry x:Name="entry_email" />
            <Label Text="Password"></Label>
            <Entry x:Name="entry_password" />
            <Button Text="Login" Clicked="Handle_Clicked"></Button>
            <Button Text="Register" Clicked="Handle_Clicked"></Button>
            <Button Text="Map Location" Clicked="Handle_Clicked_Map"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>